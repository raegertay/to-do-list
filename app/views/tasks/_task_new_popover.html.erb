<div class="container">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for tasklist.tasks.build, url: tasklist_tasks_path(tasklist), method: :post do |f| %>
      <%= f.input :name, label: false, placeholder: 'Add new task', input_html: {class: 'form-control-sm'} %>
      <%= f.input :due_date, order: [:day, :month, :year], input_html: {class: 'form-control-sm'} %>
      <%= f.button :submit, "Create New Task", class: 'btn-sm' %>
      <% end %>
    </div>
  </div>
</div>
