<div class='row'>
  <% unless tasklists.nil? %>
  <% tasklists.each do |tasklist| %>
  <div class='col-3'>

    <%= content_tag :div, class: ['card', 'border-0', 'card-' + tasklist.id.to_s] do %>
    <div class='card-header'>
      <div class='row'>
        <div class='col-8'>
          <b><%= tasklist.name %></b>
        </div>
        <div class='col-2'>
          <%= content_tag 'a', image_tag('icons/edit', size: '20'), 'data-toggle': 'popover', 'data-placement': 'top', 'data-trigger':'click', tabindex: "0", 'data-content': "#{render partial: 'tasklists/edit', locals: {tasklist: tasklist}}" %>
        </div>
        <div class='col-2'>
          <%= content_tag 'a', image_tag('icons/new', size: '25'), 'data-toggle': 'popover', 'data-placement': 'top', 'data-trigger':'click', tabindex: "0", 'data-content': "#{render partial: 'tasks/new', locals: {tasklist: tasklist}}" %>
        </div>
      </div>
    </div>

    <div class="card-body">
      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col">Task</th>
            <th scope="col">Due date</th>
            <th scope="col" colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'tasks/index', locals: {tasks: tasklist.tasks} %>
        </tbody>
      </table>
    </div>
    <% end %>

  </div>
  <% end %>
  <% end %>
</div>
