<div class='row'>
  <% unless tasklists.nil? %>
  <% tasklists.each do |tasklist| %>
  <div class='col-3'>
    <div class="card">
      <div class='card-header'>
        <%= tasklist.name %>
        <%= link_to image_tag('pencil', size: '25'), edit_tasklist_path(tasklist), title: "Edit Task List" %>
        <%= link_to image_tag('bin', size: '25'), tasklist_path(tasklist), title: "Delete Task List", method: :delete, data: { confirm: "Are you sure you want to delete Task list: #{tasklist.name}?" } %>
      </div>
      <div class="card-body">
        <ul>
          <% tasklist.tasks.each do |task| %>
          <li><%= task.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
